<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frag2_list_item"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:background="@color/white"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/frag2_list_item_2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/frag2_list_item_1" >

        <RelativeLayout
            android:id="@+id/frag2_list_item_2_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/cm_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="山西网友："
                android:textColor="#9A9A9A"
                android:textSize="12sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/cm_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frag2_list_item_2_1"
            android:layout_marginLeft="12dp"
            android:text="很好，一帖药小孩烧退了"
            android:textColor="#9A9A9A"
            android:textSize="14sp" />
		<TextView
	        android:id="@+id/cm_createDate"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/frag2_list_item_2_1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="11月22号" />
    </RelativeLayout>
</RelativeLayout>