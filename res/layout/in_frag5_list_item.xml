    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:background="@drawable/abc_list_selector_holo_dark"
    android:orientation="horizontal" >
         <TextView
            android:id="@+id/frag5_list_tv1"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical|left"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
			android:textColor="@drawable/abc_list_selector_text_blue"
            android:text="张仲景" />

        <TextView
            android:id="@+id/frag5_list_tv2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/frag5_list_tv1"
            android:layout_marginRight="5dp"
            android:layout_centerInParent="true"
			android:textColor="@drawable/abc_list_selector_text_9a9a9a"
            android:textSize="10sp"
            android:text="ddd" />

</RelativeLayout>
